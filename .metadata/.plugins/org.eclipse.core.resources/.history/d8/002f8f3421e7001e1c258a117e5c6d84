import java.util.Scanner;

public class RecursiveCall {

	int Factorial(int n) {
		if (n > 0) {
			return n * Factorial(n - 1);
		} else {
			return 1;
		}
	}

	public static void main(String[] args) {

		Scanner scanner = new Scanner(System.in);
		System.out.println("숫자를 입력해주세요: ");

		int x = scanner.nextInt();

	}
}
